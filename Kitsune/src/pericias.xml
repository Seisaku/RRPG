<?xml version="1.0" encoding="UTF-8"?>

<tabControl align="client" width="400">
	<tab title="Habilidades">
		<flowLayout align="client" autoHeight="true" maxControlsPerLine="4">
			<label horzTextAlign="center" text="Habilidades" align="top" margins="{top=15}"/>
			<comboBox left="20" top="20" field="pericias.habilidades.novas" items="{'Atletismo','Acrobacia','Arcanismo','História','Investigação','Natureza','Religião','Adestrar Animais','Medicina','Atuação','Sobrevivência','Percepção','Furtividade','Prestidigitação','Intuição','Intimidação','Persuasão','Enganação'}"/>
			<button width="20" height="20" text="+" onClick="nova=getNewSkill(sheet); novaPericia=self.rclPericiasSkill:append(); updateNovaPericia(novaPericia,nova);"/>
			<button width="20" height="20" text="*" onClick="nova=getNewSkill(sheet); rolarPericiaSemTreinamento(sheet, nova)"/>
			<flowLineBreak/>
			<label horzTextAlign="center" width="150" text="Nome"/>		
			<label horzTextAlign="center" width="30"  text="Bônus"/>
			<flowLineBreak/>
			<recordList width="320" autoHeight="true" name="rclPericiasSkill" field="pericias.habilidades.editaveis" templateForm="frmPericia"/>
			<flowLineBreak/>
			<label horzTextAlign="center" text="Habilidades" align="top" margins="{top=15}"/>
			<flowLineBreak/>
			<pericia campo="Atletismo"			nome="Atletismo"/>
			<pericia campo="Acrobacia"			nome="Acrobacia"/>
			<pericia campo="Arcanismo"			nome="Arcanismo"/>
			<pericia campo="Historia"			nome="História"/>
			<pericia campo="Investigacao"		nome="Investigação"/>
			<pericia campo="Natureza"			nome="Natureza"/>
			<pericia campo="Religiao"			nome="Religião"/>
			<pericia campo="AdestrarAnimais"	nome="Adestrar Animais"/>
			<pericia campo="Medicina"			nome="Medicina"/>
			<pericia campo="Atuacao"			nome="Atuação"/>
			<pericia campo="Sobrevivencia"		nome="Sobrevivência"/>
			<pericia campo="Percepcao"			nome="Percepção"/>
			<pericia campo="Furtividade"		nome="Furtividade"/>
			<pericia campo="Prestidigitacao"	nome="Prestidigitação"/>
			<pericia campo="Intuicao"			nome="Intuição"/>
			<pericia campo="Intimidacao" 		nome="Intimidação"/>
			<pericia campo="Persuasao"			nome="Persuasão"/>
			<pericia campo="Enganacao"			nome="Enganação"/>
		</flowLayout>
	</tab>
	<tab title="Combate">
		<flowLayout align="client" autoHeight="true" maxControlsPerLine="4">
			<label horzTextAlign="center" text="Combate" align="top" margins="{top=15}"/>
			<comboBox left="20" top="20" field="pericias.combate.novas" items="{'Armaduras','Escudos','Desarmado','Espadas','Adagas','Machados','Martelos','Maças','Compassos','Espadas Grandes','Katanas','Espadas Ninja','Lanças','Postes','Cajados','Bordões','Arcos','Bestas','Rifles','Explosivos'}"/>
			<button width="20" height="20" text="+" onClick="nova=getNewCombatSkill(sheet); novaPericia=self.rclPericiasCombat:append(); updateNovaPericia(novaPericia,nova);"/>
			<button width="20" height="20" text="*" onClick="nova=getNewCombatSkill(sheet); rolarPericiaSemTreinamento(sheet, nova)"/>
			<flowLineBreak/>
			<label horzTextAlign="center" width="150" text="Nome"/>		
			<label horzTextAlign="center" width="30"  text="Bônus"/>
			<flowLineBreak/>
			<recordList width="320" autoHeight="true" name="rclPericiasCombat" field="pericias.combate.editaveis" templateForm="frmPericia"/>
			<flowLineBreak/>
			<label horzTextAlign="center" text="Combate" align="top" margins="{top=15}"/>			
		</flowLayout>
	</tab>
	<tab title="Ferramentas">
		<flowLayout align="client" autoHeight="true" maxControlsPerLine="4">
			<label horzTextAlign="center" text="Ferramentas" align="top" margins="{top=15}"/>
