<?xml version="1.0" encoding="UTF-8"?>			
			<flowLayout width="400" autoHeight="true">
			<import file="customRollPopup.xml"/>

		    <label  text="Atributos" width="300" horzTextAlign="center" margins="{top = 5}"/>
		    <flowLineBreak/>
		    <label  text="Valor" width="30" horzTextAlign="center" margins="{left = 70}"/>
		    <label  text="+" width="10" horzTextAlign="center" margins="{left = 5}"/>
		    <label  text="Mod" width="30" horzTextAlign="center" margins="{left = 5}"/>		    
		    <label  text="Fórmula" width="100" horzTextAlign="center"/>
		    
		    <flowLineBreak/> 
			<label  text="Ataque" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.ataque" height="20" width="30" type="number" min="1" max="20" textPrompt="1" horzTextAlign="center" />
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="+" margins="{left = 5}"/>
			<edit field="atributos.ataqueMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>
			<label width="100" field="atributos.ataqueFormula" horzTextAlign="center"/>
			<label field="equipamento.ataqueProficiencia" visible="false"/>
			<label field="equipamento.ataqueEquipBonus" visible="false"/>
			<button text="ATQ" width="50" height="20" onMouseDown="">
				<event name="onMouseDown">
                        if(event.ctrlKey) then
	                        rollNode=initializeHotkeys();
	                        atq,mod=updateAtaque(sheet);
	                        sorte=updateSorte(sheet);
	                        editActionRoll(rollNode, atq, mod, sorte,'Ataque');
	                        self.customRollPopup:setNodeObject(rollNode);
	                        self.customRollPopup:show(); 
	                        self.rollCustomNow:setFocus();
                        else
                        	rolarAtaque(sheet); 
                        end
                </event>
			</button>			
			<flowLineBreak/> 

			<label  text="Defesa" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.defesa" type="number" min="1" max="20" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="+" margins="{left = 5}"/>
			<edit field="atributos.defesaMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>			
			<label width="100" field="atributos.defesaFormula" horzTextAlign="center"/>
			<label field="equipamento.defesaProficiencia" visible="false"/>
			<label field="equipamento.defesaEquipBonus" visible="false"/>
			<button text="DEF" width="50" height="20">
				<event name="onMouseDown">
					if(event.ctrlKey) then
						rollNode=initializeHotkeys();
						def,mod=updateDefesa(sheet);
						sorte=updateSorte(sheet);
						editActionRoll(rollNode, def, mod, sorte,'Defesa');
						self.customRollPopup:setNodeObject(rollNode);
						self.customRollPopup:show();
						self.rollCustomNow:setFocus();
					else
						rolarDefesa(sheet);
					end
				</event>
			</button>
			<flowLineBreak/> 

			<label  text="Agilidade" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.agilidade" type="number" min="1" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="+" margins="{left = 5}"/>
			<edit field="atributos.agilidadeMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>
			<label width="100" field="atributos.iniciativaFormula" horzTextAlign="center"/>			
			<button text="AGI" width="50" height="20">
				<event name="onMouseDown">
					if(event.ctrlKey) then 
						rollNode=initializeHotkeys();
						agi,mod=updateAgilidade(sheet); 
						sorte=updateSorte(sheet);
						editActionRoll(rollNode, agi, mod, sorte,'Agilidade');
						self.customRollPopup:setNodeObject(rollNode);
						self.customRollPopup:show();
						self.rollCustomNow:setFocus();
					else
						rolarAgilidade(sheet);
					end
				</event>
			</button>
			<flowLineBreak/> 

			<label  text="Sorte" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.sorte" type="number" min="1" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="+" margins="{left = 5}"/>
			<edit field="atributos.sorteMod" type="number" min="-20" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>
			<label width="100" field="atributos.critRange" horzTextAlign="center"/>
			<button text="SOR" width="50" height="20">
				<event name="onMouseDown">
					if(event.ctrlKey) then 
						rollNode=initializeHotkeys();
						sorte=updateSorte(sheet);
						editActionRoll(rollNode, sorte, 0, sorte,'Sorte');
						self.customRollPopup:setNodeObject(rollNode);
						self.customRollPopup:show();
						self.rollCustomNow:setFocus();
					else
						rolarSorte(sheet);
					end
				</event>
			</button>
			<flowLineBreak/>

			<label  text="Magia" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.magia" type="number" min="1" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="+" margins="{left = 5}"/>
			<edit field="atributos.MagiaMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>
			<label width="100" field="atributos.magiaFormula" horzTextAlign="center"/>
			<button text="MAG" width="50" height="20">
				<event name="onMouseDown">
					 if(event.ctrlKey) then
						 rollNode=initializeHotkeys();
						 mag,mod=updateMagia(sheet);
						 sorte=updateSorte(sheet);
						 editActionRoll(rollNode, mag, mod, sorte,'Magia');
						 self.customRollPopup:setNodeObject(rollNode);
						 self.customRollPopup:show();
						 self.rollCustomNow:setFocus();
					 else
					 	rolarMagia(sheet);
					 end
				</event>
			</button>
			<flowLineBreak/> 

			<label  text="Resistencia Mágica" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.resistenciaMagica" min="1" type="number" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="+" margins="{left = 5}"/>
			<edit field="atributos.resistenciaMagicaMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>
			<label width="100" field="atributos.resistenciaMagicaFormula" horzTextAlign="center"/>
			<button text="RMAG" width="50" height="20">
				<event name="onMouseDown">
					 if(event.ctrlKey) then
						 rollNode=initializeHotkeys();
						 rmag,mod=updateResistenciaMagica(sheet);
						 sorte=updateSorte(sheet);
						 editActionRoll(rollNode, rmag, mod, sorte,'Resistência Mágica');
						 self.customRollPopup:setNodeObject(rollNode);
						 self.customRollPopup:show();
						 self.rollCustomNow:setFocus();
					 else
					 	rolarResistenciaMagica(sheet);
					 end
				</event>
			</button>
			<flowLineBreak/>

			<label  text="Recurso" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.recurso" type="number" min="1" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="X" margins="{left = 5}"/>
			<edit field="atributos.recursoMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>			
			<label width="100" field="atributos.recursoMax" horzTextAlign="center"/>
			
			<flowLineBreak/> 

			<label  text="Vida" width="70" horzTextAlign="center" height="20" margins="{top = 5}"/>
			<edit field="atributos.vida" type="number" min="1" horzTextAlign="center" height="20" width="30"/>
			<label horzTextAlign="center" vertTextAlign="center" width="10" text="X" margins="{left = 5}"/>
			<edit field="atributos.vidaMod" type="number" min="0" horzTextAlign="center" height="20" width="30" margins="{left = 5}"/>
			<label width="100" field="atributos.vidaMax" horzTextAlign="center"/>
			<label field="atributos.vidaFormula" visible="false"/>
			<button text="VID" width="50" height="20">
				<event name="onMouseDown">
					if(event.ctrlKey) then 
						rollNode=initializeHotkeys();
						vid=updateVida(sheet);
						sorte=updateSorte(sheet);
						editActionRoll(rollNode, vid, 0, sorte,'Vida');
						self.customRollPopup:setNodeObject(rollNode);
						self.customRollPopup:show();
						self.rollCustomNow:setFocus();
					else 
						rolarVida(sheet); 
					end
				</event>
			</button> 
			</flowLayout>