<?xml version="1.0" encoding="UTF-8"?>
<flowLayout autoHeight="true" left="320" width="300">
	<label text="Armaduras" width="70"/>
	<label align="right" field="atributos.defesaComArmaduraFormula" width="80"/>
	<imageCheckBox
				hitTest="true"
				hint="Rolar Defesa"
				margins="{left = 5, top = 5}"
				checkedImage="/images/def.png"
				uncheckedImage="/images/def.png" 
				height="20" width="20">
		<event name="onMouseDown">
			if(event.ctrlKey) then
				rollNode=initializeHotkeys();
				def,mod=updateDefesaComArmadura(sheet);
				sorte=updateSorte(sheet);
				editActionRoll(rollNode, def, mod, sorte, sheet.buffs,sheet,'Defesa');
				self.customRollPopup:setNodeObject(rollNode);
				self.customRollPopup:show();
				self.rollCustomNow:setFocus();
			else
				rolarDefesaComArmadura(sheet);
			end
		</event>
	</imageCheckBox>

	<flowLineBreak/>
	<button height="20" onClick="self.rclArmaduras:append();" text="+" width="20"/>
	<label horzTextAlign="center" text="Nome" width="150"/>
	<label horzTextAlign="center" text="+" width="30"/>
	<flowLineBreak/>
	<scrollBox height="68" width="250">
		<recordList autoHeight="true" field="equipamento.armaduras" name="rclArmaduras" templateForm="frmArmadura" width="230"/>
	</scrollBox>
</flowLayout>