<?xml version="1.0" encoding="UTF-8"?>
<flowLayout autoHeight="true" width="340" margins="{top=3}">
		<label text="Armas" width="70"/>
	
	<label align="right" field="atributos.ataqueComArmaFormula" width="100"/>

	<imageCheckBox
				hitTest="true"
				hint="Rolar Ataque"
				margins="{left = 5, top = 5}"
				checkedImage="/images/atq.png"
				uncheckedImage="/images/atq.png" 
				height="30" width="30">
		<event name="onMouseDown">
			if(event.ctrlKey) then
				rollNode=initializeHotkeys();
				atq,mod=updateAtaqueComArma(sheet);
				sorte=updateSorte(sheet);
				editActionRoll(rollNode, atq, mod, sorte, sheet.buffs,sheet,'Ataque');
				self.customRollPopup:setNodeObject(rollNode);
				self.customRollPopup:show(); 
				self.rollCustomNow:setFocus();
			else
				rolarAtaqueComArma(sheet); 
			end
		</event>
	</imageCheckBox>


	<flowLineBreak/>
	<button height="20" onClick="self.rclArmas:append();" text="+" width="20"/>
